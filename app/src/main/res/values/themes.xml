        <item name="textAppearanceHeadlineSmall">@style/TextAppearance.Horace.HeadlineSmall</item>
        <item name="textAppearanceTitleLarge">@style/TextAppearance.Horace.TitleLarge</item>
        <item name="textAppearanceTitleMedium">@style/TextAppearance.Horace.TitleMedium</item>
        <item name="textAppearanceTitleSmall">@style/TextAppearance.Horace.TitleSmall</item>
        <item name="textAppearanceBodyLarge">@style/TextAppearance.Horace.BodyLarge</item>
        <item name="textAppearanceBodyMedium">@style/TextAppearance.Horace.BodyMedium</item>
