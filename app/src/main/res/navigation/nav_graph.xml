<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainNav"
    app:startDestination="@id/homeFragment">

    <!-- Home -->
    <fragment
        android:id="@+id/homeFragment"
        android:name="it.unibs.mp.horace.ui.home.HomeFragment"
        android:label="@string/home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_authGraph"
            app:destination="@id/authGraph"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />
        <argument
            android:name="source"
            android:defaultValue="@string/source_none"
            app:argType="reference" />
        <action
            android:id="@+id/action_homeFragment_to_workGroupBottomSheet"
            app:destination="@id/workGroupBottomSheet"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />
    </fragment>

    <!-- Work group -->
    <dialog
        android:id="@+id/workGroupBottomSheet"
        android:name="it.unibs.mp.horace.ui.home.workgroup.WorkGroupBottomSheet"
        android:label="@string/work_group" />

    <!-- Friends -->
    <fragment
        android:id="@+id/friendsFragment"
        android:name="it.unibs.mp.horace.ui.friends.FriendsFragment"
        android:label="@string/friends"
        tools:layout="@layout/fragment_friends" />

    <!-- History -->
    <fragment
        android:id="@+id/historyFragment"
        android:name="it.unibs.mp.horace.ui.history.HistoryFragment"
        android:label="@string/history"
        tools:layout="@layout/fragment_history" />

    <!-- Auth subgraph -->
    <navigation
        android:id="@+id/authGraph"
        app:startDestination="@id/authBottomSheet">

        <!-- Auth -->
        <dialog
            android:id="@+id/authBottomSheet"
            android:name="it.unibs.mp.horace.ui.auth.AuthBottomSheet"
            android:label="@string/authentication"
            tools:layout="@layout/bottom_sheet_auth">
            <action
                android:id="@+id/action_authBottomSheet_to_signInFragment"
                app:destination="@id/signInFragment"
                app:enterAnim="@anim/nav_default_enter_anim"
                app:exitAnim="@anim/nav_default_exit_anim" />
            <action
                android:id="@+id/action_authBottomSheet_to_homeFragment"
                app:destination="@id/homeFragment"
                app:enterAnim="@anim/nav_default_enter_anim"
                app:exitAnim="@anim/nav_default_exit_anim"
                app:popEnterAnim="@anim/nav_default_pop_enter_anim"
                app:popExitAnim="@anim/nav_default_pop_exit_anim"
                app:popUpTo="@id/homeFragment"
                app:popUpToInclusive="true">
                <argument
                    android:name="source"
                    android:defaultValue="@string/source_sign_in"
                    app:argType="reference" />
            </action>
        </dialog>

        <!-- Sign in -->
        <fragment
            android:id="@+id/signInFragment"
            android:name="it.unibs.mp.horace.ui.auth.signin.SignInFragment"
            android:label="@string/sign_in"
            tools:layout="@layout/fragment_sign_in">
            <action
                android:id="@+id/action_signInFragment_to_resetPasswordFragment"
                app:destination="@id/resetPasswordFragment"
                app:enterAnim="@anim/nav_default_enter_anim"
                app:exitAnim="@anim/nav_default_exit_anim" />
            <action
                android:id="@+id/action_signInFragment_to_signUpFragment"
                app:destination="@id/signUpFragment"
                app:enterAnim="@anim/nav_default_enter_anim"
                app:exitAnim="@anim/nav_default_exit_anim" />
            <argument
                android:name="sourceResetPassword"
                android:defaultValue="false"
                app:argType="boolean" />
            <action
                android:id="@+id/action_signInFragment_to_homeFragment"
                app:destination="@id/homeFragment"
                app:enterAnim="@anim/nav_default_enter_anim"
                app:exitAnim="@anim/nav_default_exit_anim"
                app:popEnterAnim="@anim/nav_default_pop_enter_anim"
                app:popExitAnim="@anim/nav_default_pop_exit_anim"
                app:popUpTo="@id/homeFragment"
                app:popUpToInclusive="true">
                <argument
                    android:name="source"
                    android:defaultValue="@string/source_sign_in"
                    app:argType="reference" />
            </action>
        </fragment>

        <!-- Sign up -->
        <fragment
            android:id="@+id/signUpFragment"
            android:name="it.unibs.mp.horace.ui.auth.signup.SignUpFragment"
            android:label="@string/sign_up"
            tools:layout="@layout/fragment_sign_up">
            <action
                android:id="@+id/action_signUpFragment_to_homeFragment"
                app:destination="@id/homeFragment"
                app:enterAnim="@anim/nav_default_enter_anim"
                app:exitAnim="@anim/nav_default_exit_anim"
                app:popEnterAnim="@anim/nav_default_pop_enter_anim"
                app:popExitAnim="@anim/nav_default_pop_exit_anim"
                app:popUpTo="@id/mainNav"
                app:popUpToInclusive="true">
                <argument
                    android:name="source"
                    android:defaultValue="@string/source_sign_up"
                    app:argType="reference" />
            </action>
        </fragment>


        <!-- Reset password -->
        <fragment
            android:id="@+id/resetPasswordFragment"
            android:name="it.unibs.mp.horace.ui.auth.resetpassword.ResetPasswordFragment"
            android:label="@string/reset_password_fragment"
            tools:layout="@layout/fragment_reset_password">
            <action
                android:id="@+id/action_resetPasswordFragment_to_signInFragment"
                app:destination="@id/signInFragment"
                app:enterAnim="@anim/nav_default_enter_anim"
                app:exitAnim="@anim/nav_default_exit_anim">
                <argument
                    android:name="sourceResetPassword"
                    android:defaultValue="true" />
            </action>
            <argument
                android:name="email"
                android:defaultValue="@null"
                app:argType="string"
                app:nullable="true" />
        </fragment>
    </navigation>

    <!-- Settings subgraph -->
    <navigation
        android:id="@+id/settingsGraph"
        app:startDestination="@id/settingsFragment">

        <!-- Settings -->
        <fragment
            android:id="@+id/settingsFragment"
            android:name="it.unibs.mp.horace.ui.settings.SettingsFragment"
            android:label="@string/settings"
            tools:layout="@layout/fragment_settings">
            <action
                android:id="@+id/action_settingsFragment_to_authGraph"
                app:destination="@id/authGraph"
                app:enterAnim="@anim/nav_default_enter_anim"
                app:exitAnim="@anim/nav_default_exit_anim" />
            <action
                android:id="@+id/action_settingsFragment_to_updateProfileFragment"
                app:destination="@id/updateProfileFragment"
                app:enterAnim="@anim/nav_default_enter_anim"
                app:exitAnim="@anim/nav_default_exit_anim" />
            <action
                android:id="@+id/action_settingsFragment_to_homeFragment"
                app:destination="@id/homeFragment"
                app:enterAnim="@anim/nav_default_enter_anim"
                app:exitAnim="@anim/nav_default_exit_anim"
                app:popEnterAnim="@anim/nav_default_pop_enter_anim"
                app:popExitAnim="@anim/nav_default_pop_exit_anim"
                app:popUpTo="@id/mainNav"
                app:popUpToInclusive="true">
                <argument
                    android:name="source"
                    android:defaultValue="@string/source_sign_out"
                    app:argType="reference" />
            </action>
        </fragment>

        <!-- Update profile -->
        <fragment
            android:id="@+id/updateProfileFragment"
            android:name="it.unibs.mp.horace.ui.settings.updateprofile.UpdateProfileFragment"
            android:label="fragment_update_profile"
            tools:layout="@layout/fragment_update_profile">
            <action
                android:id="@+id/action_updateProfileFragment_to_settingsFragment"
                app:destination="@id/settingsFragment"
                app:popUpTo="@id/settingsGraph"
                app:popUpToInclusive="true" />
        </fragment>
    </navigation>

    <action
        android:id="@+id/action_global_home"
        app:destination="@id/homeFragment"
        app:enterAnim="@anim/nav_default_enter_anim"
        app:exitAnim="@anim/nav_default_exit_anim" />

    <action
        android:id="@+id/action_global_friends"
        app:destination="@id/friendsFragment"
        app:enterAnim="@anim/nav_default_enter_anim"
        app:exitAnim="@anim/nav_default_exit_anim" />

    <action
        android:id="@+id/action_global_history"
        app:destination="@id/historyFragment"
        app:enterAnim="@anim/nav_default_enter_anim"
        app:exitAnim="@anim/nav_default_exit_anim" />

    <action
        android:id="@+id/action_global_settings"
        app:destination="@id/settingsGraph"
        app:enterAnim="@anim/nav_default_enter_anim"
        app:exitAnim="@anim/nav_default_exit_anim" />

    <action
        android:id="@+id/action_global_auth"
        app:destination="@id/authGraph"
        app:enterAnim="@anim/nav_default_enter_anim"
        app:exitAnim="@anim/nav_default_exit_anim" />

</navigation>