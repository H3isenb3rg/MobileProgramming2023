<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <it.unibs.mp.horace.ui.settings.ProfilePreference
        android:key="profileInfo"
        android:layout="@layout/profile_info"
        android:selectable="false" />

    <Preference
        android:icon="@drawable/baseline_person_24"
        android:key="auth"
        android:title="Authenticate" />

    <ListPreference
        android:defaultValue="-1"
        android:entries="@array/listThemeNames"
        android:entryValues="@array/listThemeValues"
        android:icon="@drawable/baseline_dark_mode_24"
        android:key="theme"
        android:title="Select theme" />

    <Preference
        android:icon="@drawable/baseline_logout_24"
        android:key="logout"
        android:title="Logout" />

</PreferenceScreen>